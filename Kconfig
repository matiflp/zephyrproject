
source "Kconfig.zephyr"

menu "Custom Application Configuration"
    
module = ZEPHYR_COURSE
module-str = zephyr_course
source "subsys/logging/Kconfig.template.log_config"

config BOARD
    string # Is invisible since we dont define a prompt
    default "zephyr_course_board"
    help
      Set a custom board name. This value will override the default board name.
config UART_DEVICE_ENABLED
    bool "Enable UART Device"
    default y if SERIAL && UART_ASYNC_API
    help
      Enable UART device for the application.
endmenu
